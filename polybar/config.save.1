[colors]
background = #FF1a1b26
foreground = #FFa9b1d6
#alert = #
#volume-min = #
#volume-med = #
#volume-max = #

[bar/mybar]

enable-ipc = true

override-redirect = false
#radius = 12.5
bottom = false
widith = 100%
height = 30

background = ${colors.background}
forefround = ${colors.foreground}

font-0 = mononoki Nerd Font:size=12

modules-left = workspaces
modules-center = spotify spotify-prev spotify-play-pause spotify-next
modules-right = power
[module/workspaces]
type = internal/i3


[module/power]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5
time-format = %H:%M

format-charging = <ramp-capacity>  <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>

label-full = Fully charged 
label-charging = %percentage%% chrg
label-discharging = %percentage%% dchrg

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/spotify]
type = custom/script
tail = true
; prefix symbol is shown before the text
format-prefix = "  "
format = <label>
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh

[module/spotify-prev]
type = custom/script
exec = echo "  "
format = <label>
click-left = playerctl previous -p spotify

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo "  "
hook-1 = echo "  "
initial = 1
click-left = playerctl play-pause -p spotify

[module/spotify-next]
type = custom/script
exec = echo "  "
format = <label>
click-left = playerctl next -p spotify
